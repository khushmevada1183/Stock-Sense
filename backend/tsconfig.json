{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": [
      "node",
      "express",
      "compression",
      "jsonwebtoken",
      "bcrypt",
      "pg",
      "cors",
      "morgan"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 