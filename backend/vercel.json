{
  "name": "stock-sense-api",
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept, Authorization"
      }
    }
  ],
  "env": {
    "PORT": "3000",
    "FRONTEND_URL": "https://stock-sense-frontend.vercel.app",
    "NODE_ENV": "production",
    "CORS_ORIGIN": "*",
    "JWT_SECRET": "stock-sense-secure-jwt-secret-key-for-authentication"
  }
} 